{
   "compilerOptions": {
      "lib": ["es6", "dom", "es2016"],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "types": []
   },
   "include": ["./src/**/*", "index.ts"],
   "exclude": [
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts",
   ]
}